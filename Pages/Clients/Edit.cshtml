@page
@model ids.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h1>Edit Client - @Model.Client!.ClientId</h1>

    @if (Model.Client == null)
    {
        <div class="alert alert-danger">Client not found</div>
    }
    else
    {
        <form method="post">
            <div class="row">
                <div class="col-md-6">

                    <input type="hidden" asp-for="Client!.Id" readonly />
                    <label asp-for="Client!.Id" class="form-label"></label>
                    <span class="form-control">@Model.Client!.Id</span>

                    <div class="form-group">
                        <label asp-for="Client!.ClientId" class="col-form-label"></label>
                        <input readonly asp-for="Client!.ClientId" class="form-control" />
                        <span asp-validation-for="Client!.ClientId" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.ClientName" class="col-form-label"></label>
                        <input asp-for="Client!.ClientName" class="form-control" />
                        <span asp-validation-for="Client!.ClientName" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.Enabled" class="col-form-label"></label>
                        <input asp-for="Client!.Enabled" class="form-control" />
                        <span asp-validation-for="Client!.Enabled" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.ClientUri" class="col-form-label"></label>
                        <input asp-for="Client!.ClientUri" class="form-control" />
                        <span asp-validation-for="Client!.ClientUri" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.ProtocolType" class="col-form-label"></label>
                        <input asp-for="Client!.ProtocolType" class="form-control" />
                        <span asp-validation-for="Client!.ProtocolType" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.RequireClientSecret" class="col-form-label"></label>
                        <input asp-for="Client!.RequireClientSecret" class="form-control" />
                        <span asp-validation-for="Client!.RequireClientSecret" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.Description" class="col-form-label"></label>
                        <input asp-for="Client!.Description" class="form-control" />
                        <span asp-validation-for="Client!.Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.LogoUri" class="col-form-label"></label>
                        <input asp-for="Client!.LogoUri" class="form-control" />
                        <span asp-validation-for="Client!.LogoUri" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.RequireConsent" class="col-form-label"></label>
                        <input asp-for="Client!.RequireConsent" class="form-control" />
                        <span asp-validation-for="Client!.RequireConsent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.AllowRememberConsent" class="col-form-label"></label>
                        <input asp-for="Client!.AllowRememberConsent" class="form-control" />
                        <span asp-validation-for="Client!.AllowRememberConsent" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.AlwaysIncludeUserClaimsInIdToken" class="col-form-label"></label>
                        <input asp-for="Client!.AlwaysIncludeUserClaimsInIdToken" class="form-control" />
                        <span asp-validation-for="Client!.AlwaysIncludeUserClaimsInIdToken" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.RequirePkce" class="col-form-label"></label>
                        <input asp-for="Client!.RequirePkce" class="form-control" />
                        <span asp-validation-for="Client!.RequirePkce" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.AllowPlainTextPkce" class="col-form-label"></label>
                        <input asp-for="Client!.AllowPlainTextPkce" class="form-control" />
                        <span asp-validation-for="Client!.AllowPlainTextPkce" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.RequireRequestObject" class="col-form-label"></label>
                        <input asp-for="Client!.RequireRequestObject" class="form-control" />
                        <span asp-validation-for="Client!.RequireRequestObject" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.AllowAccessTokensViaBrowser" class="col-form-label"></label>
                        <input asp-for="Client!.AllowAccessTokensViaBrowser" class="form-control" />
                        <span asp-validation-for="Client!.AllowAccessTokensViaBrowser" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.RequireDPoP" class="col-form-label"></label>
                        <input asp-for="Client!.RequireDPoP" class="form-control" />
                        <span asp-validation-for="Client!.RequireDPoP" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.DPoPValidationMode" class="col-form-label"></label>
                        <input asp-for="Client!.DPoPValidationMode" class="form-control" />
                        <span asp-validation-for="Client!.DPoPValidationMode" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Client!.DPoPClockSkew" class="col-form-label"></label>
                        <input asp-for="Client!.DPoPClockSkew" class="form-control" />
                        <span asp-validation-for="Client!.DPoPClockSkew" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <button type="submit" class="btn btn-primary">Save</button>
                    <a asp-page="./Index" class="btn btn-secondary">Back to List</a>
                </div>
            </div>
        </form>
    }
</div>